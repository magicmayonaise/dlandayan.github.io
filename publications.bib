@article{galikova_thirsty_2018,
	title = {The thirsty fly: {Ion} transport peptide ({ITP}) is a novel endocrine regulator of water homeostasis in {Drosophila}},
	volume = {14},
	issn = {1553-7404},
	shorttitle = {The thirsty fly},
	url = {https://journals.plos.org/plosgenetics/article?id=10.1371/journal.pgen.1007618},
