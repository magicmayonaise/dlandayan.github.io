	journal = {Cell and Tissue Research},
	author = {Carlsson, Mikael A. and Enell, Lina E. and Nässel, Dick R.},
	month = sep,
	year = {2013},
	keywords = {Drosophila melanogaster, Larvae, Central nervous system, Feeding, Human Genetics, Molecular Medicine, olfaction, proteomics, sNPF receptor},
	pages = {511--523},
	file = {Full Text PDF:/Users/dlandayan/Zotero/storage/3XEGKAGJ/Carlsson et al. - 2013 - Distribution of short neuropeptide F and its recep.pdf:application/pdf;Snapshot:/Users/dlandayan/Zotero/storage/ZR7ICGJW/10.html:text/html},
