}

@article{ishii_labeled-line_2017,
	title = {A {Labeled}-{Line} {Neural} {Circuit} for {Pheromone}-{Mediated} {Sexual} {Behaviors} in {Mice}},
	volume = {95},
	issn = {08966273},
	url = {https://linkinghub.elsevier.com/retrieve/pii/S0896627317304762},
	doi = {10.1016/j.neuron.2017.05.038},
